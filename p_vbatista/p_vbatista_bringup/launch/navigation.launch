<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="$(find p_vbatista_bringup)/maps/arena2.yaml"/>
<!--   <arg name="map_file" default="$(find p_vbatista_bringup)/maps/arena3.yaml"/> -->
<!--   <arg name="map_file" default="$(find p_vbatista_bringup)/maps/turtlemap.yaml"/> -->
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="player_name" default="p_vbatista"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find p_vbatista_bringup)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find p_vbatista_bringup)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    <arg name="player_name" value="$(arg player_name)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)">
    <node pkg="rviz" type="rviz" name="rviz" required="true"
        args="-d $(find p_vbatista_bringup)/config/navigation.rviz"/>
  </group>
</launch>